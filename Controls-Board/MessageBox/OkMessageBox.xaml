<Window x:Class="Controls_Board.MessageBox.OkMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls_Board.MessageBox"
        mc:Ignorable="d"
        Height="120" Width="200" WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="Descript" HorizontalAlignment="Center" Width="180" Height="50" Margin="0,-35,0,0" FontSize="12" TextWrapping="Wrap"/>
        <Button Style="{StaticResource CommonButton}" Content="Cancel" Click="CancelButton_Click" Width="55" Height="30" HorizontalAlignment="Center" Margin="0,55,100,0"/>
        <Button Style="{StaticResource CommonButton}" Content="Ok" Click="OkButton_Click" Width="55" Height="30" HorizontalAlignment="Center" Margin="100,55,0,0"/>
    </Grid>
</Window>

<Window x:Class="Controls_Board.MessageBox.Alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls_Board.MessageBox"
        mc:Ignorable="d"
        Height="180" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="Descript" HorizontalAlignment="Center" Width="280" Height="100" Margin="0,-35,0,0" FontSize="12" TextWrapping="Wrap"/>
        <Button Style="{StaticResource CommonButton}" Content="Ok" Click="Button_Click" Width="55" Height="30" HorizontalAlignment="Center" Margin="0,110,0,0"/>
    </Grid>
</Window>

<Window x:Class="Controls_Board.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls_Board"
        mc:Ignorable="d"
        Title="ColorPickerWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Width="424" Height="314">
    <StackPanel Orientation="Vertical">
        <local:ColorPicker x:Name="ColorPicker" Height="269" Width="420"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="30">
            <Button Content="Cancel" VerticalAlignment="Bottom" Margin="0,0,5,0" Height="25" Width="48" Click="Cancel_Clicked" RenderTransformOrigin="0.4,-0.038"/>
            <Button Content="Ok" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0" Height="25" Width="40" Click="Ok_Clicked"/>
        </StackPanel>
    </StackPanel>
</Window>
